<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div style="display: flex; justify-content: space-between; margin-top: 50px; align-items: center;">
        <div style="padding-left: 20px">
            <h1>List user:
            </h1>
        </div>
        <div style="padding-right: 20px;">
            <a href="/create-user" class="btn btn-warning">Create an user</a>
        </div>
    </div>
    <div>
        <hr />
    </div>
    <div style="margin: 20px;">
        <table class="table table-hover table-bordered">
            <thead>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Address</th>
                <th>Action</th>
            </thead>
            <tbody>
                <% users.forEach( function (user) { %>
                    <tr>
                        <td>
                            <%= user.id%>
                        </td>
                        <td>
                            <%= user.username%>
                        </td>
                        <td>
                            <%= user.email%>
                        </td>
                        <td>
                            <%= user.address%>
                        </td>
                        <td>
                            <div style="display: flex; justify-content: space-evenly">
                                <form action="/handle-view-user/<%= user.id%>" method="get">
                                    <button type="submit" class="btn btn-warning">View</button>
                                </form>
                                <form action="/handle-delete-user/<%= user.id%>" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>