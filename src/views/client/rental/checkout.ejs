<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>VietNam Rent-a-Car</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/client/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="/client/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="/client/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/client/css/style.css" rel="stylesheet">


    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker.min.css">
    <script src="https://code.jQuery.com/jQuery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.min.js"></script>
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner"
        class="show w-100 vh-100 bg-light position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow" style="background-color: black; color:white" role="status"></div>
    </div>
    <!-- Spinner End -->


    <!-- Navbar start -->
    <%- include('../layout/header'); -%>
        <!-- Navbar End -->


        <!-- Single Page Header start -->
        <div class="container-fluid page-header py-5" style="background-image: url(/client/img/checkoutbanner.jpg);">
            <h1 class="text-center text-white display-6">Checkout</h1>
        </div>
        <!-- Single Page Header End -->


        <!-- Cart Page Start -->
        <div class="container-fluid py-5">
            <div class="container py-5">
                <div class="mb-3" style="color: black !important;">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Thanh Toán</li>
                        </ol>
                    </nav>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Sản phẩm</th>
                                <th scope="col">Tên</th>
                                <th scope="col">Giá thuê</th>
                                <th scope="col">Số Lượng</th>
                                <th scope="col">Tổng giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% cartDetails.forEach( function (cartDetail) { %>
                                <tr>
                                    <th scope="row">
                                        <div class="d-flex align-items-center">
                                            <img src="/images/car-img/<%=cartDetail.car.carImage%>"
                                                class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;"
                                                alt="">
                                        </div>
                                    </th>
                                    <td>
                                        <a href="/car/<%=cartDetail.car.id%>" class="mb-0 mt-4"
                                            style="color: black !important;">
                                            <%=cartDetail.car.brand%>
                                                <%=cartDetail.car.name%>
                                        </a>
                                    </td>
                                    <td>
                                        <p class="mb-0 mt-4">
                                            <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                                }).format(cartDetail.price) %>
                                        </p>
                                    </td>
                                    <td>
                                        <div class="input-group quantity mt-4" style="width: 100px;">
                                            <input type="text" class="form-control form-control-sm text-center border-0"
                                                value="<%=cartDetail.quantity%>" disabled />
                                        </div>
                                    </td>
                                    <td>
                                        <p class="mb-0 mt-4" data-cart-detail-id="<%=cartDetail.id %>">
                                            <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                                }).format(cartDetail.price * cartDetail.quantity) %>
                                        </p>
                                    </td>
                                </tr>
                                <% }) %>
                                    <%if (user?.sumCart===0) { %>
                                        <tr>
                                            <td colspan="6">Oops! Bạn chưa chọn bất kỳ sản phẩm nào của chúng tôi !!!
                                            </td>
                                        </tr>
                                        <%}%>
                        </tbody>
                    </table>
                </div>
                <%if (user?.sumCart>0) { %>
                    <form method="post" action="/place-order">
                        <input type="hidden" name="thanhTien" id="thanhTienInput">
                        <input type="hidden" name="pickupDate" id="pickupDateHidden">
                        <input type="hidden" name="dropoffDate" id="dropoffDateHidden">

                        <div class="mt-5 row g-4 justify-content-start">
                            <div class="col-12 col-md-6">
                                <div class="p-4 ">
                                    <h1>Thông Tin Người Thuê</h1>
                                    <div class="row">
                                        <div class="col-12 form-group mb-3">
                                            <label style="color: black;">Tên người thuê</label>
                                            <input class="form-control" name="renterName" required />
                                        </div>
                                        <div class="col-12 form-group mb-3">
                                            <label style="color: black;">Địa chỉ người thuê</label>
                                            <input class="form-control" name="renterAddress" required />
                                        </div>
                                        <div class="col-12 form-group mb-3">
                                            <label style="color: black;">Số điện thoại</label>
                                            <input class="form-control" name="renterPhone" required />
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-12 col-lg-6">
                                                <div class="form-item">
                                                    <label class="form-label" style="color: black;">Ngày nhận
                                                        xe<sup>*</sup></label>
                                                    <div class="input-group date">
                                                        <input type="text" class="form-control" placeholder="dd/mm/yyyy"
                                                            id="pickupdate" name="pickupDate" />
                                                        <span class="input-group-addon">
                                                            <i class="glyphicon glyphicon-calendar"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-12 col-lg-6">
                                                <div class="form-item">
                                                    <label class="form-label" style="color: black;">Ngày trả
                                                        xe<sup>*</sup></label>
                                                    <div class="input-group date">
                                                        <input type="text" class="form-control" placeholder="dd/mm/yyyy"
                                                            id="dropoffdate" name="dropoffDate" />
                                                        <span class="input-group-addon">
                                                            <i class="glyphicon glyphicon-calendar"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 form-group mb-3">
                                            <label class="form-label" style="color: black;">Địa điểm nhận
                                                xe<sup>*</sup></label>
                                            <input type="text" class="form-control" name="pickupPlace">
                                        </div>
                                        <div class="mt-4">
                                            <i class="fas fa-arrow-left"></i>
                                            <a href="/cart" style="color: black !important;">Quay lại giỏ hàng</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="bg-light rounded">
                                    <div class="p-4">
                                        <h1 class="display-6 mb-4">Thông Tin Thanh Toán
                                        </h1>

                                        <div class="d-flex justify-content-between">
                                            <h5 class="mb-0 me-4">Số ngày thuê</h5>
                                            <div class="">
                                                <p class="mb-0" id="so_ngay_thue">0 ngày</p>
                                            </div>
                                        </div>
                                        <div class="mt-3 d-flex justify-content-between">
                                            <h5 class="mb-0 me-4">Phí giao xe</h5>
                                            <div class="">
                                                <p class="mb-0">50.000 đ</p>
                                            </div>
                                        </div>
                                        <div class="mt-3 d-flex justify-content-between">
                                            <h5 class="mb-0 me-4">Hình thức</h5>
                                            <div class="">
                                                <p class="mb-0">Thanh toán khi nhận xe (COD)</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                                        <h5 class="mb-0 ps-4 me-4">Tổng số tiền</h5>
                                        <p class="mb-0 pe-4" data-cart-total-price="<%= totalPrice %>"
                                            id="tong_so_tien_display">
                                        </p>
                                    </div>

                                    <button
                                        class="mx-auto mb-4 ms-4 btn book-now-btn rounded-pill px-4 py-3 text-uppercase"
                                        style="border-color: black !important;" type="submit">
                                        Xác nhận thanh toán
                                    </button>

                                </div>
                            </div>
                        </div>
                    </form>
                    <%}%>
            </div>
            <!-- Cart Page End -->


            <!-- Footer Start -->
            <%- include('../layout/footer'); -%>
                <!-- Footer End -->

                <script>
                    //Xử lý phần ngày tháng + tổng tiền phần checkout

                    const pickupDate = document.getElementById('pickupdate');
                    const dropoffDate = document.getElementById('dropoffdate');
                    const displaySoNgay = document.getElementById('so_ngay_thue');
                    const displayTongTien = document.getElementById('tong_so_tien_display');

                    //lấy giá trị ban đầu từ thuộc tính data
                    const giaMotNgay = parseFloat(displayTongTien.getAttribute('data-cart-total-price'));

                    //chuyển đổi chuỗi ngày thành đối tượng date
                    function parseDateVN(str) {
                        const parts = str.split('/');
                        if (parts.length === 3) {
                            return new Date(parts[2], parts[1] - 1, parts[0]);
                        }
                        return null;
                    }

                    //Hàm tính toán chính
                    function updateCalculations() {
                        const dateStart = parseDateVN(pickupDate.value)
                        const dateEnd = parseDateVN(dropoffDate.value)

                        if (dateStart && dateEnd && dateEnd > dateStart) {
                            //tính số mili giây chênh lệch
                            const diffTime = dateEnd - dateStart;
                            //tính ra số ngày
                            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                            //tính tổng tiền
                            const thanhTien = giaMotNgay * diffDays + 50000;

                            //Cập nhật giao diện
                            displaySoNgay.innerText = diffDays + " ngày";
                            displayTongTien.innerText = new Intl.NumberFormat('vi-VN', {
                                style: 'currency',
                                currency: 'VND'
                            }).format(thanhTien);
                        }
                        else {
                            //trường hợp không hợp lệ
                            displaySoNgay.innerText = "0 ngày";

                            displayTongTien.innerText = new Intl.NumberFormat('vi-VN', {
                                style: 'currency',
                                currency: 'VND'
                            }).format(0);
                        }
                    }

                    //lắng nghe sự kiện "change" trên 2 đường input
                    jQuery(document).ready(function () {

                        jQuery('#pickupdate').datepicker({
                            format: 'dd/mm/yyyy',
                            autoclose: true,
                            orientation: "bottom auto"
                        }).on('changeDate', function (e) {
                            // Khi ngày nhận thay đổi, cập nhật ngày trả tối thiểu và tính toán
                            jQuery('#dropoffdate').datepicker('setStartDate', e.date);

                            // Nếu ngày trả đã chọn nhỏ hơn ngày nhận mới, cập nhật ngày trả
                            if (jQuery('#dropoffdate').datepicker('getDate') && jQuery('#dropoffdate').datepicker('getDate') < e.date) {
                                jQuery('#dropoffdate').datepicker('update', e.date);
                            }
                            updateCalculations();
                        });

                        jQuery('#dropoffdate').datepicker({
                            format: 'dd/mm/yyyy',
                            autoclose: true,
                            orientation: "bottom auto"
                        }).on('changeDate', updateCalculations); // Lắng nghe sự kiện changeDate để tính toán

                        // Chạy tính toán lần đầu khi trang tải
                        updateCalculations();
                    });

                    document.getElementById("thanhtienInput").value = displayTongTien;
                    document.getElementById("pickupDateHidden").value = pickupDate;   // "2025-12-10"
                    document.getElementById("dropoffDateHidden").value = dropoffDate; // "2025-12-15"

                </script>
                <!-- Back to Top -->
                <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i
                        class="fa fa-arrow-up"></i></a>

                <!-- JavaScript Libraries -->
                <script src="https://ajax.googleapis.com/ajax/libs/jQuery/3.6.4/jQuery.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
                <script src="/client/lib/easing/easing.min.js"></script>
                <script src="/client/lib/waypoints/waypoints.min.js"></script>
                <script src="/client/lib/lightbox/js/lightbox.min.js"></script>
                <script src="/client/lib/owlcarousel/owl.carousel.min.js"></script>

                <!-- Template Javascript -->
                <script src="/client/js/main.js"></script>
</body>

</html>