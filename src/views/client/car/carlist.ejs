<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>VietNam Rent-a-Car</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="/client/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/client/css/style.css" rel="stylesheet">

    <!-- Font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner"
        class="show w-100 vh-100 bg-light position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow" style="background-color: black; color:white" role="status"></div>
    </div>
    <!-- Spinner End -->


    <!-- Navbar start -->
    <%- include('../layout/header'); -%>
        <!-- Navbar End -->

        <!-- Single Page Header start -->
        <div class="container-fluid page-header py-5">
            <h1 class="text-center text-white display-6">Our Car</h1>
        </div>
        <!-- Single Page Header End -->


        <!-- Car Shop Start-->
        <div class="container-fluid fruite py-5">
            <div class="container py-5">
                <h1 class="mb-4">Your Car Your Way</h1>
                <div class="row g-4">
                    <div class="col-lg-12">
                        <div class="row g-4">
                            <div class="col-9"></div>
                            <div class="col-xl-3">
                                <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                                    <label for="fruits">Sort by:</label>
                                    <select id="fruits" name="fruitlist" class="border-0 form-select-sm bg-light me-3"
                                        form="fruitform">
                                        <option value="volvo">Featured</option>
                                        <option value="saab">Price: Low to High</option>
                                        <option value="opel">PriceL High to Low</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row g-4">
                            <div class="col-lg-3">
                                <div class="row g-4">
                                    <div class="col-lg-12">
                                        <div class="mb-4">
                                            <h4>Car Brands</h4>
                                            <ul class="list-unstyled fruite-categorie">
                                                <li>
                                                    <div class="d-flex justify-content-between fruite-name">
                                                        <a href="#" style="color: gray"><i
                                                                class="fa-duotone fa-solid fa-car-side"></i>&nbsp&nbsp&nbspToyota</a>
                                                        <span>(2)</span>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="d-flex justify-content-between fruite-name">
                                                        <a href="#" style="color: gray"><i
                                                                class="fa-duotone fa-solid fa-car-side"></i>&nbsp&nbsp&nbspVinFast</a>
                                                        <span>(1)</span>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="d-flex justify-content-between fruite-name">
                                                        <a href="#" style="color: gray"><i
                                                                class="fa-duotone fa-solid fa-car-side"></i>&nbsp&nbsp&nbspHuyndai</a>
                                                        <span>(0)</span>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="d-flex justify-content-between fruite-name">
                                                        <a href="#" style="color: gray"><i
                                                                class="fa-duotone fa-solid fa-car-side"></i>&nbsp&nbsp&nbspKia</a>
                                                        <span>(1)</span>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="d-flex justify-content-between fruite-name">
                                                        <a href="#" style="color: gray"><i
                                                                class="fa-duotone fa-solid fa-car-side"></i>&nbsp&nbsp&nbspMazda</a>
                                                        <span>(1)</span>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="d-flex justify-content-between fruite-name">
                                                        <a href="#" style="color: gray"><i
                                                                class="fa-duotone fa-solid fa-car-side"></i>&nbsp&nbsp&nbspMitsubishi</a>
                                                        <span>(0)</span>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="d-flex justify-content-between fruite-name">
                                                        <a href="#" style="color: gray"><i
                                                                class="fa-duotone fa-solid fa-car-side"></i>&nbsp&nbsp&nbspHonda</a>
                                                        <span>(2)</span>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="d-flex justify-content-between fruite-name">
                                                        <a href="#" style="color: gray"><i
                                                                class="fa-duotone fa-solid fa-car-side"></i>&nbsp&nbsp&nbspFord</a>
                                                        <span>(1)</span>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <h4 class="mb-2">Price</h4>
                                            <input type="range" class="form-range w-100" id="rangeInput"
                                                name="rangeInput" min="0" max="500" value="0"
                                                oninput="amount.value=rangeInput.value">
                                            <output id="amount" name="amount" min-velue="0" max-value="500"
                                                for="rangeInput">0</output>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <h4>Type of Engine</h4>
                                            <div class="mb-2">
                                                <input type="radio" class="me-2" id="Categories-1" name="Categories-1"
                                                    value="Beverages">
                                                <label for="Categories-1">Hybrid</label>
                                            </div>
                                            <div class="mb-2">
                                                <input type="radio" class="me-2" id="Categories-1" name="Categories-1"
                                                    value="Beverages">
                                                <label for="Categories-1">Electric</label>
                                            </div>
                                            <div class="mb-2">
                                                <input type="radio" class="me-2" id="Categories-1" name="Categories-1"
                                                    value="Beverages">
                                                <label for="Categories-1">Diesel</label>
                                            </div>
                                            <div class="mb-2">
                                                <input type="radio" class="me-2" id="Categories-1" name="Categories-1"
                                                    value="Beverages">
                                                <label for="Categories-1">gasoline</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="position-relative">
                                            <img src="/client/img/banner-fruits.jpg" class="img-fluid w-100 rounded"
                                                alt="">
                                            <div class="position-absolute"
                                                style="top: 50%; right: 10px; transform: translateY(-50%);">
                                                <h3 class="text-secondary fw-bold">Fresh <br> Fruits <br> Banner</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-9">
                                <div class="row g-4 justify-content-center">
                                    <% cars.forEach( function (car) { %>
                                        <div class="col-md-6 col-lg-6 col-xl-4">
                                            <div class="rounded position-relative fruite-item">
                                                <div class="fruite-img">
                                                    <img src="/images/car-img/<%=car.carImage%>"
                                                        class="img-fluid w-100 rounded-top" alt="Image">
                                                </div>
                                                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                                                    style="top: 10px; left: 10px;">Car</div>
                                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                    <h4 style="text-align: center; width: 100%">
                                                        <a style="font-size: 20px; color:black !important; "
                                                            href="/car/<%=car.id%>">
                                                            <%=car.brand%>
                                                                <%=car.name%>
                                                        </a>
                                                    </h4>

                                                    <div class="d-flex justify-content-between flex-lg-wrap">
                                                        <p style="font-size: 15px; text-align: center; width: 100%; color:black;"
                                                            class="fs-5 fw-bold mb-0">
                                                            <%= new Intl.NumberFormat('vi-VN', { style: 'currency' ,
                                                                currency: 'VND' }).format(car.priceperday) %>/day
                                                        </p>
                                                        <a href="#"
                                                            class="mx-auto mt-2 btn book-now-btn rounded-pill px-3"
                                                            style="border-color: black !important;"><i
                                                                class="fa-solid fa-car-side me-2"></i>
                                                            Book Now</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                            <div class="col-12">
                                                <div class="pagination d-flex justify-content-center mt-5">
                                                    <a href="#" class="rounded">&laquo;</a>
                                                    <a href="#" class="active rounded">1</a>
                                                    <a href="#" class="rounded">2</a>
                                                    <a href="#" class="rounded">3</a>
                                                    <a href="#" class="rounded">4</a>
                                                    <a href="#" class="rounded">5</a>
                                                    <a href="#" class="rounded">6</a>
                                                    <a href="#" class="rounded">&raquo;</a>
                                                </div>
                                            </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Car Shop End-->


            <!-- Footer Start -->
            <%- include('../layout/footer'); -%>
                <!-- Footer End -->


                <!-- Back to Top -->
                <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i
                        class="fa fa-arrow-up"></i></a>


                <!-- JavaScript Libraries -->
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
                <script src="client/lib/easing/easing.min.js"></script>
                <script src="client/lib/waypoints/waypoints.min.js"></script>
                <script src="/client/lib/lightbox/js/lightbox.min.js"></script>
                <script src="/client/lib/owlcarousel/owl.carousel.min.js"></script>

                <!-- Template Javascript -->
                <script src="client/js/main.js"></script>
</body>

</html>