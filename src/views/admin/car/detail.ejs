<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="VietNam Rent a Car" />
    <meta name="author" content="LamVoi" />
    <title>Manage user - Admin</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(document).ready(() => {
            const avatarFile = $("#avatarFile");
            avatarFile.change(function (e) {
                const imgURL = URL.createObjectURL(e.target.files[0]);
                $("#avatarPreview").attr("src", imgURL);
                $("#avatarPreview").css({ "display": "block" });
            });
        }); 
    </script>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>
        <div id="layoutSidenav">
            <%- include('../layout/sidenav'); -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Manage Car</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item active">Cars</li>
                            </ol>
                            <div style="width: 40%; margin: auto">

                                <h4 style="padding: 20px 0;">View detail a car: </h4>

                                <form action="/admin/update-car" method="post" enctype="multipart/form-data">
                                    <input value="<%= car.id%>" name="id" type="text" style="display: none;">
                                    <div class="mb-3">
                                        <label class="form-label">Car's name</label>
                                        <input value="<%= car.name %>" name="name" type="text" class="form-control"
                                            placeholder="Your Car's name">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Price per day</label>
                                        <input value="<%=car.priceperday%>" name="priceperday" class="form-control"
                                            placeholder="vnd/day">
                                    </div>

                                    <div class="row">
                                        <div class="mb-3 col-6">
                                            <label class="form-label">Brand</label>
                                            <select name="brand" class="form-select">
                                                <% brandOptions.forEach((brandOption,index)=> { %>
                                                    <option value="<%-brandOption.value %>"
                                                        <%=brandOption.value===car.brand ? 'selected' : '' %>>
                                                        <%- brandOption.name %>
                                                    </option>
                                                    <%})%>
                                            </select>
                                        </div>
                                        <div class="mb-3 col-6">
                                            <label class="form-label">Type of car:</label>
                                            <select name="carType" class="form-select">
                                                <% carOptions.forEach((carOption,index)=> { %>
                                                    <option value="<%-carOption.value %>"
                                                        <%=carOption.value===car.carType ? 'selected' : '' %>>
                                                        <%- carOption.name %>
                                                    </option>
                                                    <%})%>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="mb-3 col-6">
                                            <label class="form-label">Seats:</label>
                                            <input value="<%=car.seat%>" type="text" class="form-control" name="seat">
                                        </div>
                                        <div class="mb-3 col-6">
                                            <label class="form-label">Engine</label>
                                            <select name="engine" class="form-select">
                                                <% engineOptions.forEach((engineOption,index)=> { %>
                                                    <option value="<%-engineOption.value %>"
                                                        <%=engineOption.value===car.engine ? 'selected' : '' %>>
                                                        <%- engineOption.name %>
                                                    </option>
                                                    <%})%>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="mb-3">
                                            <label class="form-label">Status</label>
                                            <select name="status" class="form-select">
                                                <% statusOptions.forEach((statusOption,index)=> { %>
                                                    <option value="<%-statusOption.value %>"
                                                        <%=statusOption.value===car.status ? 'selected' : '' %>>
                                                        <%- statusOption.name %>
                                                    </option>
                                                    <%})%>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="formFile" class="form-label">Car's Images</label>
                                        <input class="form-control" type="file" id="avatarFile" name="carImage"
                                            accept=".png, .jpg, .jpeg">
                                    </div>
                                    <% if (car.carImage) { %>
                                        <img style="max-height: 250px; display: block;" alt="avatar preview"
                                            id="avatarPreview" src="/images/car-img/<%=car.carImage%>" />
                                        <% } else { %>
                                            <img style="max-height: 250px; display: none;" alt="Car Image"
                                                id="avatarPreview" />
                                            <% } %>
                                                <div class="mb-3 mt-2">
                                                    <label class="form-label">Car's Detail</label>
                                                    <textarea name="detailCar" class="form-control"
                                                        rows="6"><%=car.detailCar%></textarea>
                                                </div>
                                                <div>
                                                    <button type="submit" class="btn btn-warning mt-3">Update</button>
                                                </div>
                                </form>
                            </div>
                        </div>
                    </main>
                    <%- include('../layout/footer'); -%>
                </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>
</body>

</html>