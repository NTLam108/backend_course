generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.MediumText
  expiresAt DateTime
}

model User {
  id          Int     @id @default(autoincrement())
  username    String  @unique @db.VarChar(255)
  password    String  @db.VarChar(255)
  fullname    String? @db.VarChar(255)
  address     String? @db.VarChar(255)
  phone       String? @db.VarChar(255)
  accountType String  @db.VarChar(255)
  avatar      String? @db.VarChar(255)

  role    Role     @relation(fields: [roleId], references: [id])
  roleId  Int
  ratings rating[]
  cart    Cart?
  rentals Rental[]

  @@map("users")
}

model Role {
  id          Int    @id @default(autoincrement())
  name        String @unique @db.VarChar(100)
  description String @db.VarChar(255)

  users User[]

  @@map("roles")
}

model Rental_detail {
  id       Int @id @default(autoincrement())
  price    Int
  quantity Int

  rental   Rental @relation(fields: [rentalId], references: [id])
  rentalId Int

  car   Car @relation(fields: [carId], references: [id])
  carId Int
}

model Rental {
  id            Int             @id @default(autoincrement())
  totalPrice    Int
  pickupdate    String          @db.VarChar(255)
  dropoffdate   String          @db.VarChar(255)
  pickupplace   String          @db.VarChar(255)
  renterName    String          @db.VarChar(255)
  renterAddress String          @db.VarChar(255)
  renterPhone   String          @db.VarChar(255)
  status        String          @default("PENDING")
  paymentMethod String          @db.VarChar(255)
  paymentStatus String          @db.VarChar(255)
  paymentRef    String?
  rentalDetails Rental_detail[]

  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@map("rentals")
}

model Car {
  id            Int             @id @default(autoincrement())
  name          String          @db.VarChar(255)
  priceperday   Int
  carImage      String?         @db.VarChar(255)
  detailCar     String          @db.MediumText
  carType       String          @db.VarChar(255)
  seat          Int
  brand         String          @db.VarChar(255)
  engine        String          @db.VarChar(255)
  status        String          @db.VarChar(100)
  cartDetails   CartDetail[]
  rentalDetails Rental_detail[]

  @@map("cars")
}

model rating {
  id        Int      @id @default(autoincrement())
  rate      Int
  comment   String   @db.MediumText
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model carTool {
  id       Int     @id @default(autoincrement())
  name     String? @db.VarChar(255)
  descTool String  @db.MediumText
  price    Int
  quantity Int
  status   String  @db.VarChar(100)
  imgTool  String? @db.VarChar(255)
}

model Cart {
  id          Int          @id @default(autoincrement())
  user        User         @relation(fields: [userId], references: [id])
  userId      Int          @unique
  sum         Int
  cartDetails CartDetail[]

  @@map("carts")
}

model CartDetail {
  id       Int  @id @default(autoincrement())
  price    Int
  quantity Int
  cart     Cart @relation(fields: [cartId], references: [id])
  cartId   Int

  car   Car @relation(fields: [carId], references: [id])
  carId Int

  @@map("cart_detail")
}
